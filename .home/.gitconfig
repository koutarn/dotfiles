[user]
    email = fuse.kanrinin@gmail.com
	name = koutarn

[color "diff"]
    meta = 242 238
    frag = 239 236
    old = 167 normal
    new = 030 normal
    context = 240
    commit = 246 024

[diff]
    compactionHeuristic = true
    colorMoved = default

[core]
    attributesfile = ~/.gitattributes-global
    excludesfile = ~/.gitignore-global
	editor = nvim
	quotepath = false
    pager = delta
#true = チェックアウト時にLF⇛CRLF
#input = コミット時にCRLF⇛LF
#false 無効
#autocrlf = input

[color]
ui = auto

[commit]
	verbose = true
#template
# template = ~/.git-template
[init]
	defaultBranch = main
[ghq]
	root = ~/workspace/src
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/

[interactive]
diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    light = false    # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
    line-numbers = true

[merge]
conflictstyle = diff3
